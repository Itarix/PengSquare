<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cous.q.carremagique.MainActivity"
    android:background="@color/colorGray">


    <LinearLayout
        android:layout_row="0"
        android:layout_column="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Chronometer
            android:id="@+id/chrono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/cadre_line"
            />

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@drawable/cadre_line"
            android:text="@string/score"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_row="1"
        android:layout_column="0">

        <View
            android:layout_margin="10dp"
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:background="@color/colorLightBlue" />


    </LinearLayout>


    <GridLayout
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center">


        <GridLayout
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/gridCarreMagique"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/cadre_line">


            <!--          -->
            <!--          -->
            <!-- Ligne 1  -->
            <!--          -->
            <!--          -->


            <EditText
                android:id="@+id/chiffreLig1Col1"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/reponseAttendu"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_column="1"
                android:layout_row="0"
                android:text="@string/plusSign"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/chiffreLig1Col2"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="@string/reponseAttendu"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_column="3"
                android:layout_row="0"
                android:text="@string/plusSign"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/chiffreLig1Col3"
                android:layout_column="4"
                android:layout_row="0"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="@string/reponseAttendu"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_column="5"
                android:layout_row="0"
                android:text="@string/equalsSign"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/resLig1"
                android:layout_column="6"
                android:layout_row="0"
                android:text="@string/resultat"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp" />


            <!--          -->
            <!--          -->
            <!-- Ligne 2  -->
            <!--          -->
            <!--          -->

            <EditText
                android:id="@+id/chiffreLig2Col1"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/reponseAttendu"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_column="1"
                android:layout_row="1"
                android:text="@string/plusSign"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/chiffreLig2Col2"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="@string/reponseAttendu"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_column="3"
                android:layout_row="1"
                android:text="@string/plusSign"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/chiffreLig2Col3"
                android:layout_column="4"
                android:layout_row="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="@string/reponseAttendu"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_column="5"
                android:layout_row="1"
                android:text="@string/equalsSign"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/resLig2"
                android:layout_column="6"
                android:layout_row="1"
                android:text="@string/resultat"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp" />



            <!--          -->
            <!--          -->
            <!-- Ligne 3  -->
            <!--          -->
            <!--          -->



            <EditText
                android:id="@+id/chiffreLig3Col1"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/reponseAttendu"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_column="1"
                android:layout_row="2"
                android:text="@string/plusSign"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/chiffreLig3Col2"
                android:layout_column="2"
                android:layout_row="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="@string/reponseAttendu"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_column="3"
                android:layout_row="2"
                android:text="@string/plusSign"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <EditText
                android:id="@+id/chiffreLig3Col3"
                android:layout_column="4"
                android:layout_row="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:hint="@string/reponseAttendu"
                android:maxLength="1"
                android:inputType="number"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_column="5"
                android:layout_row="2"
                android:text="@string/equalsSign"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/resLig3"
                android:layout_column="6"
                android:layout_row="2"
                android:text="@string/resultat"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp" />




            <!--                  -->
            <!--                  -->
            <!-- Ligne avec Egale -->
            <!--                  -->
            <!--                  -->



            <TextView
                android:layout_column="0"
                android:layout_row="3"
                android:text="@string/equalsSign"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_column="2"
                android:layout_row="3"
                android:text="@string/equalsSign"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_column="4"
                android:layout_row="3"
                android:text="@string/equalsSign"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>



            <!--               -->
            <!--               -->
            <!-- Ligne Resulat -->
            <!--               -->
            <!--               -->



            <TextView
                android:id="@+id/resCol1"
                android:layout_column="0"
                android:layout_row="4"
                android:text="@string/resultat"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/resCol2"
                android:layout_column="2"
                android:layout_row="4"
                android:text="@string/resultat"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/resCol3"
                android:layout_column="4"
                android:layout_row="4"
                android:text="@string/resultat"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>

        </GridLayout>


        <LinearLayout
            android:layout_row="0"
            android:layout_column="2">

            <View
                android:layout_marginBottom="100dp"
                android:layout_marginTop="15dp"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/colorLightBlue" />


        </LinearLayout>

        <GridLayout
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/cadre_line">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="@string/soumettreReponse"
                android:onClick="validerReponse"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:text="@string/regle"
                android:onClick="regleJeux"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text="@string/newGame"
                android:onClick="recommencer"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:text="@string/quitter"
                android:onClick="quitterApp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                android:text="@string/niveau"
                android:onClick="choixNiveau"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:text="@string/aide"
                android:onClick="aide"
                />


        </GridLayout>
    </GridLayout>

</GridLayout>
